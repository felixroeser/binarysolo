---
- hosts: all
  roles:
    -  role: common
- hosts: homebase
  roles:
    <% if @components[:stringer].enabled? %>  
    - role: stringer
    <% end %>
    <% if @components[:jekyll].enabled? %>
    #- role: jekyll
    <% end %>    
    <% if @components[:nginx].redirects? %>
    - role: web_redirects
    <% end %>
    <% if @components[:gitolite].enabled? %>
    - role: gitolite
    <% end %>
    <% if @components[:fwd].enabled? %>
    - role: fwd
    <% end %>
