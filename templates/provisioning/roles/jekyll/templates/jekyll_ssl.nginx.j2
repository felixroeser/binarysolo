server {
  listen 443;
  server_name {{ site_server }};
  root /home/jekyll/sites/{{ site_name }}/;
  expires 1d;
  access_log /var/log/nginx/jekyll-{{ site_name }}-access.log;
  error_log /var/log/nginx/jekyll-{{ site_name }}-error.log;

  ssl on;
  ssl_certificate /etc/nginx/ssl/{{ site_ssl_domain }}/server.crt;
  ssl_certificate_key /etc/nginx/ssl/{{ site_ssl_domain }}/server.key;  
}
