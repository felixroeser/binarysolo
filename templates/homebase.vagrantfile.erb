# vi: set ft=ruby :

Vagrant.configure('2') do |config|

  config.vm.hostname = '<%= @homebase[:hostname] %>'

  <% if @provider_name == 'digitalocean' %>
    config.vm.box = 'digital_ocean'
    config.vm.box_url = "https://github.com/smdahlen/vagrant-digitalocean/raw/master/box/digital_ocean.box"

    config.vm.provider :digital_ocean do |provider|
      provider.client_id    = '<%= @provider[:client_id] %>'
      provider.api_key      = '<%= @provider[:api_key] %>'
      provider.region       = '<%= @provider[:region] %>'
      provider.image        = '<%= @provider[:image] %>'
      provider.size         = '<%= @provider[:size] %>'
      provider.ssh_key_name = 'binary_solo_homebase'
    end  
  <% end %>

  config.ssh.username = '<%= @homebase[:master] %>'
  config.ssh.private_key_path = '<%= @homebase[:ssh_key] %>'

  config.vm.provision "ansible" do |ansible|
    ansible.playbook = "provisioning/playbook.yml"
    ansible.sudo = true
    ansible.verbose = true
  end

end
